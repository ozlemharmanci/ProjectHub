@model ProjectHub.Models.User
@using ProjectHub.Models

@{
    ViewData["Title"] = $"{Model?.Username ?? "Kullanıcı"} Profili";
    var userProjects = ViewBag.UserProjects as List<Project> ?? new List<Project>();
    var currentUserId = Context.Session.GetString("UserId");
    var isCurrentUser = currentUserId == Model?.Id;
    var isFollowing = Model?.Followers?.Contains(currentUserId) == true;
}

<div class="row">
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body text-center">
                @if (Model != null)
                {
                    <div class="position-relative d-inline-block">
                        @if (!string.IsNullOrEmpty(Model.ProfileImage) && Model.ProfileImage != "default-profile.png")
                        {
                            <img src="~/uploads/profiles/@Model.ProfileImage"
                                 class="rounded-circle mb-3"
                                 alt="Profil Resmi"
                                 width="150"
                                 height="150"
                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'">
                        }
                        <div class="rounded-circle mb-3 bg-light d-flex align-items-center justify-content-center @(Model.ProfileImage != "default-profile.png" && !string.IsNullOrEmpty(Model.ProfileImage) ? "d-none" : "d-flex")"
                             style="width: 150px; height: 150px; border: 3px solid #dee2e6;">
                            <i class="fas fa-user-circle fa-5x text-secondary"></i>
                        </div>
                    </div>

                    <h3>@Model.Username</h3>

                    <div class="d-flex justify-content-center gap-3 mb-3">
                        <div class="text-center">
                            <div class="fw-bold">@Model.FollowerCount</div>
                            <small class="text-muted">Takipçi</small>
                        </div>
                        <div class="text-center">
                            <div class="fw-bold">@Model.FollowingCount</div>
                            <small class="text-muted">Takip</small>
                        </div>
                        <div class="text-center">
                            <div class="fw-bold">@(userProjects.Count)</div>
                            <small class="text-muted">Proje</small>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ProfileBio))
                    {
                        <p class="text-muted">@Model.ProfileBio</p>
                    }

                    <p class="text-muted">
                        <i class="fas fa-envelope me-1"></i> @Model.Email
                    </p>
                    <p class="text-muted">
                        <i class="fas fa-calendar-alt me-1"></i> Üyelik: @Model.CreatedAt.ToString("dd MMMM yyyy")
                    </p>

                    @if (!isCurrentUser && !string.IsNullOrEmpty(currentUserId))
                    {
                        <div class="mt-3">
                            @if (isFollowing)
                            {
                                <form asp-action="UnfollowUser" method="post" class="d-inline">
                                    <input type="hidden" name="username" value="@Model.Username" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-user-minus me-1"></i> Takibi Bırak
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="FollowUser" method="post" class="d-inline">
                                    <input type="hidden" name="username" value="@Model.Username" />
                                    <button type="submit" class="btn btn-primary btn-sm">
                                        <i class="fas fa-user-plus me-1"></i> Takip Et
                                    </button>
                                </form>
                            }
                        </div>
                    }

                    @if (isCurrentUser)
                    {
                        <div class="mt-3">
                            <a asp-action="EditProfile" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-edit me-1"></i> Profili Düzenle
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="text-danger">
                        <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
                        <h4>Kullanıcı bulunamadı</h4>
                        <p class="text-muted">Lütfen geçerli bir kullanıcı adı girin.</p>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-project-diagram me-2"></i>Projeler
                    @if (userProjects.Count > 0)
                    {
                        <span class="badge bg-primary ms-2">@userProjects.Count</span>
                    }
                </h4>
            </div>
            <div class="card-body">
                @if (userProjects.Count > 0)
                {
                    <div class="list-group">
                        @foreach (var project in userProjects)
                        {
                            <a asp-controller="Project" asp-action="Details" asp-route-id="@project.Id"
                               class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h5 class="mb-1">@project.Title</h5>
                                        <p class="mb-1 text-muted">@project.Description</p>
                                        <div class="d-flex gap-3">
                                            <small class="text-muted">
                                                <i class="fas fa-download me-1"></i> @project.DownloadCount indirme
                                            </small>
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i> @project.UploadDate.ToString("dd MMM yyyy")
                                            </small>
                                            <span class="badge bg-@(project.IsApproved ? "success" : "warning")">
                                                @(project.IsApproved ? "Onaylı" : "Onay Bekliyor")
                                            </span>
                                        </div>
                                    </div>
                                    <i class="fas fa-chevron-right text-muted"></i>
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Henüz hiç proje yüklenmemiş</h5>
                        <p class="text-muted">Projeler burada görünecektir.</p>

                        @if (isCurrentUser)
                        {
                            <a asp-controller="Project" asp-action="Upload" class="btn btn-primary mt-2">
                                <i class="fas fa-plus me-1"></i> İlk Projeni Yükle
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(function () {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}