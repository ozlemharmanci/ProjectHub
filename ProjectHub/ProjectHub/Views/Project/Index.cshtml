@model IEnumerable<ProjectHub.Models.Project>
@{
    ViewData["Title"] = "Projeler";
}

<h2 class="mb-4">Projeler</h2>

<form method="get" class="row g-3 mb-4">
    <div class="col-md-10">
        <input type="text" name="search" value="@ViewBag.SearchTerm" class="form-control" placeholder="Proje adı, açıklama veya yükleyen kişi..." />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Ara</button>
    </div>
</form>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-success">@TempData["Msg"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">Henüz hiç proje eklenmemiş.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var project in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@project.Title</h5>
                        <p class="card-text text-truncate">@project.Description</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <small class="text-muted">Yükleyen: @project.OwnerName</small>
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("Details","Project", new { id = project.Id })" class="btn btn-sm btn-outline-primary">Detay</a>
                            <a href="~/@project.FilePath" class="btn btn-sm btn-success" download>İndir</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
