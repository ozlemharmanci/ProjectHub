@model ProjectHub.Models.Project

@{
    ViewData["Title"] = "Proje Yükle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h3 class="card-title">Proje Yükle</h3>
            </div>
            <div class="card-body">
                <form asp-action="MyProjects" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Title" class="form-label">Proje Başlığı *</label>
                        <input asp-for="Title" class="form-control" placeholder="Projenizin başlığını girin" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label">Proje Açıklaması *</label>
                        <textarea asp-for="Description" class="form-control" rows="5"
                                  placeholder="Projenizin detaylı açıklamasını yazın..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <small class="form-text text-muted">Minimum 50 karakter, maximum 1000 karakter.</small>
                    </div>

                    <div class="form-group mb-4">
                        <label class="form-label">Proje Dosyası (ZIP) *</label>
                        <input type="file" name="projectFile" class="form-control" accept=".zip" required
                               onchange="validateFile(this)" />
                        <small class="form-text text-muted">
                            Maksimum dosya boyutu: 100MB. Sadece ZIP formatı kabul edilir.
                        </small>
                        <div id="fileError" class="text-danger"></div>
                    </div>

                    <div class="alert alert-info">
                        <h6 class="alert-heading">Önemli Bilgiler</h6>
                        <ul class="mb-0">
                            <li>Projeleriniz yükledikten sonra admin onayına gönderilecektir</li>
                            <li>Onay süreci genellikle 24-48 saat sürmektedir</li>
                            <li>Uygunsuz içerik içeren projeler reddedilecektir</li>
                            <li>ZIP dosyası içinde README.md bulundurmanız önerilir</li>
                        </ul>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-plus"></i> Proje Yükle
                        </button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <a asp-action="MyProjects" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Projelerime Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function validateFile(input) {
            const fileError = document.getElementById('fileError');
            const file = input.files[0];

            if (file) {
                // Dosya uzantısı kontrolü
                if (!file.name.toLowerCase().endsWith('.zip')) {
                    fileError.textContent = 'Sadece ZIP dosyaları kabul edilir.';
                    input.value = '';
                    return;
                }

                // Dosya boyutu kontrolü (100MB)
                const maxSize = 100 * 1024 * 1024; // 100MB
                if (file.size > maxSize) {
                    fileError.textContent = 'Dosya boyutu 100MB\'dan büyük olamaz.';
                    input.value = '';
                    return;
                }

                fileError.textContent = '';
            }
        }

        // Form gönderiminden önce validasyon
        document.querySelector('form').addEventListener('submit', function (e) {
            const title = document.getElementById('Title').value;
            const description = document.getElementById('Description').value;
            const fileInput = document.querySelector('input[type="file"]');

            if (!title || !description || !fileInput.files[0]) {
                e.preventDefault();
                alert('Lütfen tüm zorunlu alanları doldurun.');
            }
        });
    </script>
}