@model List<ProjectHub.Models.Project>

@{
    ViewData["Title"] = "Projelerim";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Projelerim</h2>
    <a asp-action="Upload" class="btn btn-success">
        <i class="fas fa-plus"></i> Yeni Proje Yükle
    </a>
</div>

@if (Model != null && Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Proje Adı</th>
                    <th>Durum</th>
                    <th>Yüklenme Tarihi</th>
                    <th>İndirme Sayısı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr>
                        <td>
                            <strong>@project.Title</strong>
                            <br>
                            <small class="text-muted">@(project.Description.Length > 50 ? project.Description.Substring(0, 50) + "..." : project.Description)</small>
                        </td>
                        <td>
                            @if (project.IsApproved)
                            {
                                <span class="badge bg-success">Onaylı</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Onay Bekliyor</span>
                            }
                        </td>
                        <td>@project.UploadDate.ToString("dd MMMM yyyy")</td>
                        <td>
                            <span class="badge bg-info">@project.DownloadCount</span>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-outline-primary" title="Detaylar">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Download" asp-route-id="@project.Id" class="btn btn-outline-success" title="İndir">
                                    <i class="fas fa-download"></i>
                                </a>
                                <!-- EDIT BUTONU -->
                                <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-outline-warning" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <!-- DELETE BUTONU -->
                                @if (!project.IsApproved)
                                {
                                    <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-outline-danger" title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-outline-secondary" disabled title="Onaylı projeler silinemez">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="row mt-3">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body text-center">
                    <h5 class="card-title">Toplam Proje</h5>
                    <p class="card-text display-6">@Model.Count</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body text-center">
                    <h5 class="card-title">Onaylı Projeler</h5>
                    <p class="card-text display-6">@Model.Count(p => p.IsApproved)</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body text-center">
                    <h5 class="card-title">Bekleyen Projeler</h5>
                    <p class="card-text display-6">@Model.Count(p => !p.IsApproved)</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body text-center">
                    <h5 class="card-title">Toplam İndirme</h5>
                    <p class="card-text display-6">@Model.Sum(p => p.DownloadCount)</p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-folder-open fa-5x text-muted mb-4"></i>
        <h4 class="text-muted">Henüz hiç projeniz bulunmamaktadır</h4>
        <p class="text-muted">İlk projenizi yükleyerek başlayın!</p>
        <a asp-action="Upload" class="btn btn-primary btn-lg">
            <i class="fas fa-plus"></i> İlk Projemi Yükle
        </a>
    </div>
}